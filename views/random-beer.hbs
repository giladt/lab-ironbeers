{{#if beer}}
  <article>
    {{> parBeer beer }}
    {{#if beer.food_pairing}}
      <h2>Food Pairing</h2>
      <ul>
        {{#each beer.food_pairing}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    {{/if}}
    <h2>Brewers Tips:</h2>
    <q>{{beer.brewers_tips}}</q>
  </article>
{{/if}}